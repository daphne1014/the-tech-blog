<article class="post">
    <div class="title">
        <span>({{title}})</span>
    </div>
    <div class="meta">
        <div>
            <h2>{{content}}</h2>
        </div>
        By {{user.username}} on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>