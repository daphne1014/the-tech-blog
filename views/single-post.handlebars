<article class="post">
    <div class="title">
        <span>({{post.title}})</span>
    </div>
    <div class="meta">
        <div>
            <h2>{{post.content}}</h2>
        </div>
        Posted by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

{{!-- commeent form start --}}
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
        <button type="button" class="upvote-btn">upvote</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}